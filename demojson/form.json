{
  "ref": "form",
  "model": "form",
  "width": "100px",
  "options": [
    {
      "label": "复选框",
      "model": [],
      "type": "checkbox",
      "children": [
        {
          "label": "1",
          "name": ""
        },
        {
          "label": "2",
          "name": ""
        },
        {
          "label": "3",
          "name": ""
        },
        {
          "label": "4",
          "name": ""
        }
      ]
    },
    {
      "label": "输入框",
      "modal": [],
      "type": "input",
      "placeholder": "默认值"
    },
    {
      "label": "发布时间",
      "modal": "form.date1",
      "type": "datetime",
      "prop":"date1",
      "placeholder": "选择日期时间",
      "format":"yyyy-MM-dd HH:mm:ss"
    },
    {
      "label": "活动区域",
      "model": "form.region",
      "type": "select",
      "placeholder": "请选择活动区域",
      "prop":"region",
      "children": [
        {
          "label": "区域一",
          "value": "shanghai"
        },
        {
          "label": "区域二",
          "value": "beijing"
        }
      ]
    },
    {
      "label": "特殊资源",
      "model": "form.resource",
      "type": "radio",
      "children": [
        {
          "label": "线上品牌赞助商",
          "value": "shanghai"
        },
        {
          "label": "线下场地免费",
          "value": "shanghai"
        }
      ]
    },
    {
      "label": "活动形式",
      "type": "textarea",
      "model": "form.desc"
    },
    {
      "label": "",
      "type": "button",
      "content": "提交",
      "color": "primary",
      "clickfn": "onSubmit"
    },
    {
      "label": "",
      "type": "button",
      "content": "重置",
      "color": "",
      "clickfn": "resetForm"
    }
  ],
  "rules": "rules"
}